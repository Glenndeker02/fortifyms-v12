# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fortifyms_v12?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters-long-replace-in-production"

# JWT
JWT_SECRET="your-jwt-secret-key-min-32-characters-long-replace-in-production"

# Email Service (SendGrid, AWS SES, or SMTP)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email-user"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@fortifymis.com"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="fortifyms-uploads"

# Alternative: Google Cloud Storage
# GCS_PROJECT_ID="your-gcs-project-id"
# GCS_BUCKET="fortifyms-uploads"
# GCS_CREDENTIALS_JSON='{"type":"service_account",...}'

# Alternative: Cloudinary
# CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY="your-cloudinary-api-key"
# CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Maps API (Google Maps or Mapbox)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# Or use Mapbox
# NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# WebSocket Server (for real-time features)
WEBSOCKET_URL="ws://localhost:3001"
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:3001"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Feature Flags (optional)
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_WEBSOCKETS="true"

# Encryption
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# Rate Limiting (Redis)
REDIS_URL="redis://localhost:6379"

# Monitoring & Error Tracking (Sentry)
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Analytics (Optional - Google Analytics, Mixpanel, etc.)
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# File Upload Limits
MAX_FILE_SIZE_MB="10"
MAX_IMAGE_SIZE_MB="5"
MAX_VIDEO_SIZE_MB="50"

# Environment
NODE_ENV="development"
